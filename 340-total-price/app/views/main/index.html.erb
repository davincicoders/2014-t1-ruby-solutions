<%= form_tag "/" do %>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Price each</th>
    <th>Quantity</th>
    <th>Update</th>
    <th>Line price</th>
  </tr>
  <% total_price = 0.0 %>
  <% @products.each do |product| %>
    <% line = CartLine.find_by(cart_id: @cart.id, product_id: product.id) %>
    <% total_price = total_price + product.price_per_unit * line.quantity %>
    <tr>
      <td>
        <%= image_tag product.image_filename %>
      </td>
      <td>
        <%= product.name %>
      </td>
      <td>
        $<%= sprintf('%.2f', product.price_per_unit) %>
      </td>
      <td>
        <%= text_field_tag "quantity_#{product.id}", 
          line.quantity,
          class: "quantity" %>
      </td>
      <td>
        <%= submit_tag "Update" %>
      </td>
      <td>
        $<%= sprintf('%.2f', product.price_per_unit * line.quantity) %>
      </td>
    </tr>
  <% end %>
</table>

<br clear="both">

<p>
  <b>Choose shipping method:</b>

  <% @ship_methods.each do |ship_method| %>

    <%= radio_button_tag :ship_method_id, ship_method.id,
      @cart.ship_method_id == ship_method.id %>

    <%= ship_method.name %> 
    $<%= sprintf('%.2f', ship_method.price) %>

  <% end %>

  <%= submit_tag "Update" %>

  <% total_price = total_price + @cart.ship_method.price %>
</p>

<p>
  <b>Total price</b>
  $<%= sprintf('%.2f', total_price) %>
</p>

<% end %>
